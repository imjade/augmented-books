<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:background="#000044">
	<TableLayout android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:visibility="visible"
		android:id="@+id/signinLayout" android:background="#000044">

		<TableRow>
			<TextView android:id="@+id/textName" android:text="User Name:"
				android:textColor="#ffffff" />
			<EditText android:id="@+id/editName" android:width="240px" />
		</TableRow>

		<TableRow>
			<TextView android:id="@+id/textPasswd" android:text="Password:"
				android:textColor="#ffffff" />
			<EditText android:id="@+id/editPasswd" android:password="true" />
		</TableRow>

		<TableRow>
			<Button android:id="@+id/buttonSignIn" android:text="Sign In" />
		</TableRow>

		<TableRow>
			<TextView android:text="New User?" android:textColor="#ffffff" />
			<Button android:id="@+id/buttonSignUp" android:text="Sign up" />

		</TableRow>
		
		<TableRow>
			
			<Button android:id="@+id/visitor" android:text="Log in as a Visitor" />

		</TableRow>

	</TableLayout>

	<TableLayout android:layout_height="fill_parent"
		android:visibility="gone" android:layout_width="fill_parent"
		android:id="@+id/registerLayout" android:background="#000044">

		<TableRow>
			<TextView android:id="@+id/newUserName" android:text="User Name:"
				android:textColor="#ffffff" />
			<EditText android:id="@+id/neweditName" android:width="240px" />
		</TableRow>

		<TableRow>
			<TextView android:id="@+id/newPasswd" android:text="Password:"
				android:textColor="#ffffff" />
			<EditText android:id="@+id/neweditPasswd" android:password="true" />
		</TableRow>

		<TableRow>
			<Button android:id="@+id/buttonRegister" android:text="Register" />
		</TableRow>


	</TableLayout>

</LinearLayout>